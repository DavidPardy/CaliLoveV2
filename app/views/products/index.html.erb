<html>
	<head>
		<%= stylesheet_link_tag "products-index" %>
	</head>
	<body>
	<div class="wrapper-index">
		<div class="push-index"></div>
		<div class="products-container">
			<% @products.each_with_index do |product, index| %>
					<%= link_to product, :class => "product-item-#{index}" do %>
						<div class="text-element"><%= "#{product.name}" %> <%= number_to_currency(product.price) %></div>
            <%= image_tag("") %>
          <% end %>
			<% end %>
		</div>
	</div>
	</body>
</html>

